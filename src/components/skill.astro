---
// Props esperados: src (ruta del logo), alt (nombre de la tecnolog√≠a)
interface props {
  src: string;
  alt: string;
}
const { src, alt } = Astro.props;
---

<div class=" -z-10 group relative flex justify-center items-center w-24 h-24 bg-gradient-to-r from-crudo to-azulMedio rounded-full transition-transform duration-300 hover:scale-110">
  <img src={src} alt={alt} class="object-contain w-3/4 h-3/4 opacity-70" />
  <span class="absolute opacity-0 group-hover:opacity-100 group-hover:translate-y-0 translate-y-4 text-sm text-white bg-black bg-opacity-75 rounded px-2 py-1 transition-all duration-300 text-nowrap" id={alt}>
</span>
</div>
