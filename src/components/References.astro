---
// Recibe el id como propiedad
interface props {
  id: string;
}
// Desestructuramos la propiedad id
const { id } = Astro.props;
---

        <div class="flex flex-col border-darkBlue border-2 border-opacity-70 p-4 w-1/4 rounded-3xl transition-all  hover:shadow-2xl  duration-500 ease-in-out" id={`${id}`}>
            <img class="object-contain h-24 mr-auto transition-all duration-500 ease-in-out hover:scale-105 hover:opacity-90" src="#" alt="referente1" id={`${id}-img`}>
            <h4 class="text-xl font-montserrat italic  text-azulGris text-wrap" id={`${id}-title`}></h3>
            <p class="font-montserrat font-medium text-20 text-darkBlue text-wrap" id={`${id}-description`}></p>
            <p class="font-montserrat font-medium text-20 text-azulMedio" id={`${id}-contact`}></p>
        </div>
