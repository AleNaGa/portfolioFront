---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/nav.astro';
import SideBar from '../components/sideBar.astro';
import Studies from '../components/studies.astro';
import Skills from '../components/skills.astro';
---

<Layout title="index">
		<Nav />
		<SideBar />
		
<div class="px-10 w-screen h-screen flex" id="aboutMesection">
<div class="flex-1 flex justify-left align-middle flex-wrap py-32">
	<h1 class="text-60 font-montserrat font-extrabold text-darkBlue" id="aboutMeTitle"></h1>
	<div class="text-clip px-20">
	<p class="font-roboto font-medium text-20 text-azulMedio w-10/12" id="aboutMePhrase"></p>
	</div>
</div>
<div class="flex-1 bg-paleBlue">
	<div class="relative">
	<img class="top-0 left-0 -translate-x-20 h-screen" src="/profile.png" alt="alex">
	</div>
</div>
</div>
<div class="px-10 w-screen h-screen flex" id="studiessection">
	<div class="flex-1 flex justify-left align-middle flex-col py-32 gap-10">
	<h1 class="text-60 font-montserrat font-extrabold text-darkBlue" id="studiesTitle"></h1>
	<div class="flex flex-col px-20 gap-10">
		<Studies id="studies1" />
		<Studies id="studies2" />
		<Studies id="studies3" />
	</div>
</div>
</div>
<div class="px-10 w-screen h-screen flex" id="skillssection">
	<div class="flex-1 flex justify-left align-middle flex-col py-32 gap-10">
	<h1 class="text-60 font-montserrat font-extrabold text-darkBlue" id="skillsTitle"></h1>
	<div class="flex flex-row gap-10 justify-center">
	<div class="flex flex-col p-10 gap-10 shadow-[4px_4px_6px_0px_rgba(0,0,0,0.2)] w-1/3">
		<h3 class="text-3xl font-roboto font-semibold italic text-azulGris text-wra" id="sofwareDevelopment"></h3>
		<Skills id="Skill1" />
		<Skills id="Skill2" />
		<Skills id="Skill3" />
	</div>
	<div class="flex flex-col p-10 gap-10 shadow-[4px_4px_6px_0px_rgba(0,0,0,0.2)] w-1/3">
		<h3 class="text-3xl font-roboto font-semibold italic  text-azulGris text-wra" id="frontendDevelopment"></h3>
		<Skills id="Skill4" />
		<Skills id="Skill3" />
		<Skills id="Skill2" />
	</div>
</div>
</div>
</div>
</Layout>